<Application x:Class="Sea_Battle.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Sea_Battle.ViewModels"
             xmlns:v="clr-namespace:Sea_Battle.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:RegistrationViewModel}">
            <v:RegistrationWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SelectGameViewModel}">
            <v:SelectGameWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GameListViewModel}">
            <v:GameListWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BattlePrepareViewModel}">
            <v:BattlePrepareWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BattleViewModel}">
            <v:BattleWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BattleResultViewModel}">
            <v:BattleResultWindow/>
        </DataTemplate>
    </Application.Resources>
</Application>
